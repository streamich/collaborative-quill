{
  "name": "collaborative-quill",
  "version": "0.0.1",
  "description": "Binding for collaborative editing support in Quill rich-text editor.",
  "author": {
    "name": "streamich",
    "url": "https://github.com/streamich"
  },
  "homepage": "https://github.com/streamich/collaborative-quill",
  "repository": "streamich/collaborative-quill",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "LICENSE",
    "lib/"
  ],
  "scripts": {
    "prettier": "prettier --ignore-path .gitignore --write 'src/**/*.{ts,tsx,js,jsx}'",
    "prettier:check": "prettier --ignore-path .gitignore --list-different 'src/**/*.{ts,tsx,js,jsx}'",
    "lint": "yarn eslint",
    "clean": "npx rimraf@5 dist lib es6 es2019 es2020 esm typedocs storybook-static",
    "build": "tsc --project tsconfig.build.json",
    "jest": "jest",
    "test": "yarn jest --maxWorkers 7",
    "test:all": "yarn lint && yarn test",
    "test:ci": "yarn jest --maxWorkers 3 --no-cache",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:publish": "npx gh-pages -d storybook-static"
  },
  "keywords": [
    "quill",
    "quill-editor",
    "quill-editor-binding",
    "collaborative",
    "multiplayer",
    "binding",
    "collaborative-editor",
    "editor",
    "input",
    "textarea",
    "contenteditable",
    "json-crdt",
    "json",
    "crdt"
  ],
  "dependencies": {},
  "peerDependencies": {
    "quill": "*",
    "quill-delta": "*",
    "json-joy": "*",
    "react": "*",
    "tslib": "2"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@storybook/addon-essentials": "^7.6.2",
    "@storybook/addon-interactions": "^7.6.2",
    "@storybook/addon-links": "^7.6.2",
    "@storybook/addons": "^7.6.2",
    "@storybook/blocks": "^7.6.2",
    "@storybook/react": "^7.6.2",
    "@storybook/react-webpack5": "^7.6.2",
    "@storybook/testing-library": "^0.2.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "config-galore": "^1.0.0",
    "jest": "^29.7.0",
    "json-joy": "^16.13.2",
    "prettier": "^3.3.3",
    "quill": "^2.0.2",
    "quill-delta": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^7.6.2",
    "ts-jest": "^29.2.3",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "jest": {
    "verbose": true,
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [],
    "testRegex": ".*/(__tests__|__jest__|demo)/.*\\.(test|spec)\\.tsx?$",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "config": {
    "config": {
      "commitizen": {
        "path": "git-cz"
      }
    }
  }
}
